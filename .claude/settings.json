{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)"
    ],
    "deny": [
      "Bash(git push origin main:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/production-mutation-gate.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'POST-COMPACTION REMINDER: You just went through context compaction. Hard stops still apply: (1) Do NOT write to durable storage (Shortcut, Slack, MEMORY.md, log.md) based on the compaction summary alone. Re-verify claims against primary sources first. (2) Do NOT trust that approved text survived compaction. If you need to push content that was previously approved, re-show it and get fresh approval. (3) Do NOT consume temp files from before compaction. Fetch fresh data.'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(npm test*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/test-gate.sh"
          }
        ]
      },
      {
        "matcher": "mcp__voice-mode__converse",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/format-voice-output.sh"
          }
        ]
      }
    ]
  }
}

{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)"
    ],
    "deny": [
      "Bash(git push origin main:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git push origin main*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-main-push.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(npm test*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/test-gate.sh"
          }
        ]
      },
      {
        "matcher": "mcp__voice-mode__converse",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/format-voice-output.sh"
          }
        ]
      }
    ]
  }
}
